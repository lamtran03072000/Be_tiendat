generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model homepage {
  id              Int  @id @default(autoincrement())
  banner          Json
  loiMoDau        Json
  number          Json
  sanPhamCungCap  Json
  tuLieuHinhAnh   Json
  linhVucUngDung  Json
  banMuonBietThem Json
}

model header {
  id        Int  @id @default(autoincrement())
  titlePage Json
}

model mail {
  id      Int      @id @default(autoincrement())
  email   String?  @db.VarChar(255)
  sdt     String?  @db.VarChar(255)
  tieuDe  String?  @db.VarChar(255)
  noiDung String?  @db.VarChar(255)
  isCheck Boolean?
  hoTen   String?  @db.VarChar(255)
}

model img {
  id  Int    @id @default(autoincrement())
  img String @db.VarChar(1000)
}

model tuyenDung {
  id                Int   @id @default(autoincrement())
  banner            Json
  taiSaoLamViec     Json
  cacViTriTuyenDung Json
  giaTri            Json?
}

model danhSachSanPham {
  id       Int       @id @default(autoincrement())
  nameVn   String?   @db.VarChar(255)
  nameEn   String?   @db.VarChar(255)
  isHidden Boolean?
  img      String?   @db.VarChar(255)
  sanPham  sanPham[]
}

model sanPham {
  id              Int              @id @default(autoincrement())
  idDanhSach      Int?
  nameEn          String?          @db.VarChar(255)
  infoEn          Json?
  desEn           Json?
  desVn           Json?
  infoVn          Json?
  imgExtra        Json?
  nameVn          String?          @db.VarChar(255)
  danhSachSanPham danhSachSanPham? @relation(fields: [idDanhSach], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "sanPham_ibfk_1")

  @@index([idDanhSach], map: "idDanhSach")
}

model lienHe {
  id                 Int   @id @default(autoincrement())
  lienHe             Json
  banner             Json
  chinhSachThanhToan Json?
}

model veChungToi {
  id         Int   @id @default(autoincrement())
  banner     Json?
  des        Json?
  coreValues Json?
}

model pageSanPham {
  id     Int   @id @default(autoincrement())
  banner Json?
}

model thongTin {
  id  Int     @id @default(autoincrement())
  sdt String? @db.VarChar(255)
}

model user {
  id       Int     @id @default(autoincrement())
  taiKhoan String? @db.VarChar(255)
  matKhau  String? @db.VarChar(255)
}
